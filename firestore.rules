rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() { return request.auth != null; }

    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userDocExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function getUserRole() {
      return userDocExists() ? getUserDoc().data.role : null;
    }

    function getUserClientId() {
      return userDocExists() ? getUserDoc().data.clientId : null;
    }

    function isManufacturer() {
      return getUserRole() in ['support_agent', 'supervisor', 'admin', 'lead_supervisor', 'lead_support_agent'];
    }

    // Checks if the user should be able to read a given ticket
    function canReadTicket(ticket) {
      return isManufacturer() || (userDocExists() && ticket.data.clientId == getUserClientId());
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isManufacturer() || request.auth.uid == userId;
    }

    match /tickets/{ticketId} {
      // A user can read a ticket if they are a manufacturer OR their clientId matches the ticket's
      allow read: if isSignedIn() && canReadTicket(resource);
      
      allow create: if isSignedIn() && !isManufacturer();
      
      // Staff can update any part of the ticket.
      // Clients can only update specific fields (like re-opening or deleting).
      allow update: if isSignedIn() && 
        (isManufacturer() || 
          (resource.data.clientId == getUserClientId() && (
            // Allow client to re-open a resolved ticket
            (resource.data.status == 'Resolved' && request.resource.data.status == 'Acknowledged') ||
            // Allow client to mark for deletion
            (request.resource.data.deletedByClient == true && resource.data.deletedByClient == false)
          ))
        );

      match /comments/{commentId} {
        // A user can read/create a comment if they can read the parent ticket.
        allow read, create: if isSignedIn() && canReadTicket(get(/databases/$(database)/documents/tickets/$(ticketId)));
      }
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isManufacturer());
    }
  }
}
